<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingLeft="13dp"
    android:paddingRight="13dp"
    android:padding="5dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:background="@drawable/shape_responder_encuesta"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/titulo_grafico_escala"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="17dp"
            android:textColor="#ffffff"
            android:textStyle="bold"
            android:paddingLeft="10dp"/>

        <TextView
            android:id="@+id/promedio_escala"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/titulo_grafico_numerica"
            android:layout_centerInParent="true"
            android:layout_marginTop="10dp"
            android:background="@drawable/escala_circle"
            android:gravity="center"
            android:textColor="@android:color/white"
            android:textSize="25dp" />

        <TextView
            android:id="@+id/tv_promedio_escala"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/promedio_escala"
            android:layout_marginTop="10dp"
            android:paddingLeft="10dp"
            android:text="Respuesta promedio"
            android:textAlignment="textEnd"
            android:textColor="#ffffff"
            android:textSize="12dp"
            android:textStyle="italic" />

    </RelativeLayout>

</LinearLayout>