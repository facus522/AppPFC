<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient"
    android:focusable="true"
    android:focusableInTouchMode="true"
    android:orientation="vertical"
    tools:context="com.encuestando.salmeron.facundo.encuestandofcm.RegisterActivity">

    <android.support.v7.widget.Toolbar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/toolbar_info_especial"
        app:title="InformaciÃ³n y Noticias"
        android:background="?attr/colorPrimary"
        android:layout_gravity="center"
        app:titleMargin="@dimen/cardview_default_elevation"
        android:minHeight="?attr/actionBarSize"
        app:titleTextColor="?android:attr/colorPressedHighlight"
        android:theme="?attr/actionBarTheme" />

    <ListView
        android:id="@+id/listaInfoNoticiasEspecial"
        android:layout_width="match_parent"
        android:layout_height="@android:dimen/dialog_min_width_minor"></ListView>


    <android.support.design.widget.FloatingActionButton
        android:id="@+id/floatingActionButton2"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:clickable="true"
        android:backgroundTint="@android:color/holo_red_light"
        app:srcCompat="@android:drawable/ic_input_add"
        android:layout_gravity="bottom|end" />

</LinearLayout>
