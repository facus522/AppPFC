<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient"
    android:focusable="true"
    android:focusableInTouchMode="true"
    tools:context="com.encuestando.salmeron.facundo.encuestandofcm.MainActivity">

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <android.support.v7.widget.Toolbar
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/titulo_especial"
                android:background="?attr/colorPrimary"
                android:layout_gravity="center"
                app:titleMargin="@dimen/cardview_default_elevation"
                android:minHeight="?attr/actionBarSize"
                app:titleTextColor="?android:attr/colorPressedHighlight"
                android:theme="?attr/actionBarTheme" />


            <android.support.v7.widget.CardView
                android:id="@+id/encuestasDisponiblesEspecial"
                android:layout_width="360dp"
                android:layout_height="149dp"
                android:layout_below="@+id/titulo_especial"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="20dp"
                app:cardCornerRadius="25dp"
                app:cardElevation="20dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:srcCompat="@drawable/encuestas_disponibles" />
                </RelativeLayout>
            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:id="@+id/informacionNoticiasEspecial"
                android:layout_width="360dp"
                android:layout_height="149dp"
                android:layout_below="@+id/encuestasDisponiblesEspecial"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="20dp"
                app:cardCornerRadius="25dp"
                app:cardElevation="20dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:srcCompat="@drawable/noticias_informacion" />
                </RelativeLayout>
            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:id="@+id/administrarEncuestas"
                android:layout_width="360dp"
                android:layout_height="149dp"
                android:layout_below="@+id/informacionNoticiasEspecial"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="20dp"
                app:cardCornerRadius="25dp"
                app:cardElevation="20dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:srcCompat="@drawable/administrar_encuestas" />
                </RelativeLayout>
            </android.support.v7.widget.CardView>


            <ImageView
                android:layout_width="300dp"
                android:layout_height="100dp"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="10dp"
                android:scaleType="fitEnd"
                app:srcCompat="@drawable/pie_menu" />
        </LinearLayout>
    </ScrollView>
</RelativeLayout>
