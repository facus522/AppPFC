<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingLeft="13dp"
    android:paddingRight="13dp"
    android:focusable="true"
    android:focusableInTouchMode="true"
    android:padding="5dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:background="@drawable/shape_responder_encuesta"
        android:foreground="?android:attr/selectableItemBackground"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/titulo_grafico_textual"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="17dp"
            android:textColor="#ffffff"
            android:textStyle="bold"
            android:paddingLeft="10dp"/>

        <TextView
            android:id="@+id/descripcion_grafico_textual"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="17dp"
            android:textColor="#ffffff"
            android:textStyle="italic"
            android:background="@color/impares"
            android:layout_marginTop="5dp"
            android:textAlignment="center"
            android:layout_below="@+id/titulo_grafico_textual"
            android:text="Respuesta sin estadÃ­sticas por ser de tipo textual."
            android:paddingLeft="10dp"/>




    </RelativeLayout>

</LinearLayout>