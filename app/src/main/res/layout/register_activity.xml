<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient"
    android:orientation="vertical"
    android:focusable="true"
    android:focusableInTouchMode="true"
    tools:context="com.encuestando.salmeron.facundo.encuestandofcm.RegisterActivity">

    <TextView
        android:id="@+id/registro_titulo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="Registro de Usuario"
        android:layout_marginTop="15dp"
        android:textColor="?android:attr/colorPressedHighlight"
        android:textSize="30sp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/nombre_register_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:hint="Nombre de Usuario"
        android:drawableLeft="@drawable/ic_action_nombreusuario"
        android:inputType="textPersonName"
        android:textSize="24sp" />

    <EditText
        android:id="@+id/password1_register_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:drawableLeft="@drawable/ic_action_pass"
        android:hint="Contraseña"
        android:textSize="24sp" />

    <EditText
        android:id="@+id/password2_register_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Repita Contraseña"
        android:drawableLeft="@drawable/ic_action_pass"
        android:inputType="textPassword"
        android:textSize="24sp" />
    <EditText
        android:id="@+id/mail_register_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:drawableLeft="@drawable/ic_action_mail"
        android:hint="E-Mail"
        android:textSize="24sp" />

    <EditText
        android:id="@+id/fecha_nacimiento_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:drawableLeft="@drawable/ic_action_fecha"
        android:hint="Fecha de Nacimiento"
        android:textSize="24sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:gravity="center_horizontal"
        android:layout_marginTop="50dp"
        android:layout_gravity="center_horizontal">

        <android.support.v7.widget.CardView
            android:id="@+id/guardar_button"
            android:layout_width="150dp"
            android:layout_height="50dp"
            app:cardBackgroundColor="@color/colorAccent"
            app:cardCornerRadius="25dp"
            app:cardElevation="10dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:id="@+id/textView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:text="Guardar"
                    android:textColor="#fff"
                    android:textSize="24sp" />
            </RelativeLayout>
        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:id="@+id/volver_button"
            android:layout_width="150dp"
            android:layout_height="50dp"
            android:layout_marginLeft="20dp"
            app:cardBackgroundColor="@color/colorPrimary"
            app:cardCornerRadius="25dp"
            app:cardElevation="10dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:id="@+id/textView2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:text="Volver"
                    android:textColor="#fff"
                    android:textSize="24sp" />
            </RelativeLayout>
        </android.support.v7.widget.CardView>

    </LinearLayout>


</LinearLayout>
