<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingLeft="13dp"
    android:paddingRight="13dp"
    android:focusable="true"
    android:focusableInTouchMode="true"
    android:padding="5dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:background="@drawable/shape_responder_encuesta"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/textView_pregunta_responder_encuesta"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="17dp"
            android:textColor="#ffffff"
            android:textStyle="bold"
            android:paddingLeft="10dp"/>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/editText_responder_encuesta"
            android:textStyle="italic"
            android:inputType="textCapSentences"
            android:hint="Ingrese su respuesta"
            android:imeOptions="actionDone"
            android:layout_marginTop="5dp"
            android:layout_below="@id/textView_pregunta_responder_encuesta"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"/>


    </RelativeLayout>

</LinearLayout>