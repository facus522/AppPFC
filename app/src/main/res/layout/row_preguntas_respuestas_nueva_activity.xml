<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingLeft="13dp"
    android:paddingRight="13dp"
    android:padding="5dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:background="@drawable/shape_nueva_encuesta"
        android:foreground="?android:attr/selectableItemBackground"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/textView_pregunta_nueva_encuesta"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="1. ¿Cómo andas?"
            android:textSize="15dp"
            android:textStyle="bold"
            android:paddingLeft="10dp"/>

        <android.support.design.widget.TextInputLayout
            android:id="@+id/box_respuesta_nueva"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/textView_pregunta_nueva_encuesta"
            android:paddingLeft="10dp"
            android:paddingRight="10dp">

            <android.support.design.widget.TextInputEditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:focusable="false"
                android:background="#C4CDE0"
                android:textSize="24sp" />

        </android.support.design.widget.TextInputLayout>

    </RelativeLayout>

</LinearLayout>