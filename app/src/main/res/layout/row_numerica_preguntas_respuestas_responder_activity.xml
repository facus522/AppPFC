<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingLeft="13dp"
    android:paddingRight="13dp"
    android:padding="5dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:background="@drawable/shape_responder_encuesta"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/textView_pregunta_nueva_encuesta"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="17dp"
            android:textColor="#ffffff"
            android:textStyle="bold"
            android:paddingLeft="10dp"/>

        <TextView
            android:id="@+id/box_respuesta_nueva"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="24dp"
            android:drawableLeft="@drawable/ic_numerica"
            android:layout_marginTop="15dp"
            android:layout_below="@id/textView_pregunta_nueva_encuesta"
            android:background="#C4CDE0"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"/>

    </RelativeLayout>

</LinearLayout>